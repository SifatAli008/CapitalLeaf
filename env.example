# CapitalLeaf Security Framework Configuration

# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/capitalleaf
REDIS_URL=redis://localhost:6379

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-here
ENCRYPTION_KEY=your-encryption-key-here
SESSION_SECRET=your-session-secret-here

# Threat Intelligence Configuration
THREAT_FEED_API_KEY=your-threat-feed-api-key
THREAT_INTELLIGENCE_ENABLED=true
THREAT_UPDATE_INTERVAL=300000

# DLP Configuration
DLP_ENABLED=true
DLP_SENSITIVE_KEYWORDS=account,balance,credit,debit,transaction,payment
DLP_MAX_FILE_SIZE=10485760

# Microservice Isolation Configuration
ISOLATION_ENABLED=true
MAX_CONNECTIONS_PER_SERVICE=100
RATE_LIMIT_PER_MINUTE=1000

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs/capitalleaf.log

# Monitoring Configuration
MONITORING_ENABLED=true
METRICS_ENDPOINT=/metrics
HEALTH_CHECK_INTERVAL=30000

# External API Configuration
EXTERNAL_THREAT_FEEDS=https://api.threatfeed.com/v1
SECURITY_SCANNER_API=https://api.securityscanner.com/v1

# Notification Configuration
NOTIFICATION_ENABLED=true
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-email-password

# Slack Configuration (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_CHANNEL=#security-alerts
