{
  "name": "capitalleaf",
  "version": "1.0.0",
  "description": "CapitalLeaf - Dynamic Defense with Microservice Isolation",
  "private": true,
  "scripts": {
    "build": "cd frontend && npm install && npm run build",
    "start": "cd frontend && npm run start",
    "dev": "cd frontend && npm run dev",
    "dev:backend": "node src/index.js",
    "dev:full": "concurrently \"npm run dev:backend\" \"npm run dev\"",
    "lint": "cd frontend && npm run lint",
    "lint:fix": "cd frontend && npm run lint:fix",
    "install:all": "npm install && cd frontend && npm install",
    "test": "cd frontend && npm run test",
    "test:ci": "cd frontend && npm run test -- --coverage --watchAll=false",
    "type-check": "cd frontend && npx tsc --noEmit",
    "security-audit": "cd frontend && npm audit --audit-level=moderate",
    "check-deployment": "node scripts/check-deployment.js",
    "lighthouse": "npx lighthouse https://your-app.vercel.app --output=json --output-path=./lighthouse-report.json",
    "ci:build": "npm run install:all && npm run type-check && npm run lint && npm run security-audit && npm run build",
    "ci:test": "npm run test:ci",
    "ci:deploy": "npm run ci:build && npm run check-deployment"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "joi": "^17.11.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
